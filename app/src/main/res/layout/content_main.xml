<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:padding="@dimen/page_padding"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <!-- Control Buttons -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:orientation="horizontal">

        <Button
                android:id="@+id/buttonStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
        />
        <Button
                android:id="@+id/buttonStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
        />

    </LinearLayout>

    <!-- Light Sensor Output -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:orientation="horizontal">
        <TextView
                android:id="@+id/tvLightSensorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Light Sensor: "/>
        <TextView
                android:id="@+id/tvLightSensorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/tvLightSensorUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Illuminance (lx)"/>
    </LinearLayout>

    <!-- Temperature Sensor Output -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tvTempSensorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Temperature Sensor: "/>
        <TextView
                android:id="@+id/tvTempSensorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/tvTempSensorUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Celsius (Â°C)"/>
    </LinearLayout>

    <!-- Gyroscope Sensor Output -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tvGyroSensorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Gyroscope Sensor: "/>
        <TextView
                android:id="@+id/tvGyroSensorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/tvGyroSensorUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" rate of rotation around x, y, z (rad/sec)"/>
    </LinearLayout>

</LinearLayout>